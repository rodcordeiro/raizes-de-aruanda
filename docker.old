version: "3.1"
services:
    web:
        build: .
        ports:
            - "80:80"
        volumes:
            - ./:/var/www/html/
        links:
            - db
        networks:
            - default
    db:
        image: mysql:latest
        ports:
            - "3306:3306"
        environment:
            MYSQL_DATABASE: "id8872570_icnt"
            MYSQL_USER: "id8872570_cordeiro"
            MYSQL_PASSWORD: "@C0rdeiro"
            MYSQL_ROOT_PASSWORD: "R0dC0rd"
        command: --default-authentication-plugin=mysql_native_password --init-file /docker-entrypoint-initdb.d/db.sql 
        volumes:
            - ./database:/docker-entrypoint-initdb.d
            - ./database/config:/etc/mysql/conf.d
            - persistent:/var/lib/mysql
        networks:
            - default
            
    phpmyadmin:
        image: phpmyadmin/phpmyadmin
        links:
            - db:db
        ports:
            - 8001:80
        environment:
            MYSQL_DATABASE: "id8872570_icnt"
            MYSQL_USER: "id8872570_cordeiro"
            MYSQL_PASSWORD: "@C0rdeiro"
            MYSQL_ROOT_PASSWORD: "R0dC0rd"
volumes:
    persistent: